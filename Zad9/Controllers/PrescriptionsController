using Microsoft.AspNetCore.Mvc;
using Zad9.DTOs;
using Zad9.Services;

namespace Zad9.Controllers
{
    [ApiController]
    [Route("api/[controller]")]
    public class PrescriptionsController : ControllerBase
    {
        private readonly DBService _dbService;

        public PrescriptionsController(DBService dbService)
        {
            _dbService = dbService;
        }

        [HttpPost]
        public async Task<IActionResult> AddPrescription([FromBody] PrescriptionRequestDto dto)
        {
            try
            {
                await _dbService.AddPrescriptionAsync(dto);
                return Ok("Prescription added successfully");
            }
            catch (ArgumentException ex)
            {
                return BadRequest(ex.Message);
            }
        }
    }
}
